        <Button Content="Работа с книгой" Foreground="White" HorizontalAlignment="Left" Margin="278,221,0,0" VerticalAlignment="Top" Width="163" Height="28" BorderBrush="{x:Null}" FontFamily="Inter" FontStyle="Normal" FontSize="9" FontWeight="SemiBold" Click="Button_Click_1">
